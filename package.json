{
  "name": "wacz-uploader",
  "version": "1.0.0",
  "description": "A straightforward single page application for uploading your WACZ archives to IPFS",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "standard --fix",
    "build": "esbuild index.js --bundle --outfile=bundle.js --format=esm",
    "serve": "wds --node-resolve --open --watch",
    "dev": "npm run build && concurrently \"npm run serve\" \"npm run build -- --watch\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/webrecorder/wacz-uploader.git"
  },
  "author": "rangermauve <ranger@mauve.moe> (https://mauve.moe/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/webrecorder/wacz-uploader/issues"
  },
  "homepage": "https://github.com/webrecorder/wacz-uploader#readme",
  "devDependencies": {
    "@web/dev-server": "^0.1.34",
    "concurrently": "^7.4.0",
    "esbuild": "^0.15.10",
    "standard": "^17.0.0"
  },
  "dependencies": {
    "@ipld/car": "^4.1.6",
    "@ipld/dag-pb": "^2.1.18",
    "auto-js-ipfs": "^1.3.11",
    "ipfs-unixfs": "^7.0.0"
  }
}
